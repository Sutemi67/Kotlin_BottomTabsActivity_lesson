<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_text">

    <fragment
        android:id="@+id/navigation_text"
        android:name="apc.appcradle.bottomtabsactivity.ui.home.TextFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_text" />

    <fragment
        android:id="@+id/navigation_image"
        android:name="apc.appcradle.bottomtabsactivity.ui.dashboard.ImageFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_image" />

    <fragment
        android:id="@+id/navigation_help"
        android:name="apc.appcradle.bottomtabsactivity.ui.notifications.HelpFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_help" >
        <action
            android:id="@+id/action_navigation_notifications_to_speciesFragment"
            app:destination="@id/speciesFragment" />
    </fragment>
    <fragment
        android:id="@+id/speciesFragment"
        android:name="apc.appcradle.bottomtabsactivity.SpeciesFragment"
        android:label="fragment_species"
        tools:layout="@layout/fragment_species" />
</navigation>